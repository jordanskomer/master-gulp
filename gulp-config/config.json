{
  "browser": "google chrome",
  "port": 3000,
  "use_websockets": false,

  "use_html_templating": true,
  "use_pug": false,
  "use_haml": true,

  "use_coffee": true,

  "layout_file": "app/layout.jade",
  "concat_file_name": "main",

  "scss_linter": "/gulp-config/linters/.scss-lint.yml",
  "js_linter": "",
  "coffee_linter": "/gulp-config/linters/.coffee-lint.json",

  "views_path": {
    "start_path": "app/views/",
    "end_path": "public/"
  },
  "scripts_path": {
    "start_path": "app/assets/javascripts/",
    "end_path": "public/javascripts/"
  },
  "scss_path": {
    "start_path": "app/assets/stylesheets/",
    "end_path": "public/stylesheets"
  },
  "images_path": {
    "start_path": "app/assets/images/",
    "end_path": "public/images"
  },
  "gzip_path": {
    "start_path": "public/",
    "end_path": "gzip/public/"
  }
}